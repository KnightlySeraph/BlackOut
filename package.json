{
  "name": "blackout",
  "version": "0.0.1",
  "description": "Game description here",
  "author": "Not professor berrier",
  "main": "index.html",
  "repository": "UWStout/blackout",
  "scripts": {
    "sfx": "audiosprite --loop watchTick --loop walking --loop walking2 --loop mainAmbience --loop happyAmbience --output assets/audio/sounds assets/audio/*.wav",
    "dev": "run-s clean dev-cmd",
    "prod": "run-s clean prod-cmd",
    "deploy": "run-s clean deploy-cmd",
    "package": "run-s clean nwjs-cmd package-cmd installer-cmd",
    "packagetest": "run-s clean sfx nwjs-cmd packagetest-cmd",
    "clean": "del-cli -f dist/* packaged/*",
    "dev-cmd": "webpack --config webpack.dev.config.js",
    "prod-cmd": "webpack --config webpack.prod.config.js",
    "deploy-cmd": "webpack --config webpack.deploy.config.js",
    "nwjs-cmd": "cross-env NWJS=true webpack --config webpack.deploy.config.js",
    "package-cmd": "babel-node packager.js build",
    "installer-cmd": "run-script-os",
    "installer-cmd:darwin": "./buildMacInstaller.sh",
    "installer-cmd:win32": "zip packaged/BlackOut-win64.zip packaged/blackout/win64/**/*",
    "packagetest-cmd": "run-script-os",
    "packagetest-cmd:darwin": "nwbuild -p osx64 -r .",
    "packagetest-cmd:win32": "nwbuild -p win64 -r .",
    "test": "eslint ./src/**/**.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "audiosprite": "^0.7.1",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.0",
    "browser-sync": "^2.24.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "cpy-cli": "^2.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.4.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "expose-loader": "^0.7.5",
    "file-loader": "^2.0.0",
    "npm-run-all": "^4.1.3",
    "nw-builder": "^3.5.4",
    "run-script-os": "^1.0.3",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.17.1",
    "webpack-command": "^0.4.1",
    "webpack-glsl-loader": "^1.0.1"
  },
  "dependencies": {
    "phaser-ce": "^2.11.0",
    "three": "^0.96.0",
    "webfontloader": "^1.6.28"
  },
  "window": {
    "title": "Blackout",
    "icon": "./assets/images/icon.png",
    "toolbar": false,
    "frame": true,
    "fullscreen": false
  }
}
